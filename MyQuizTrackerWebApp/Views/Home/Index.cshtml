@model IEnumerable<Question>
@{
    ViewData["Title"] = "Home Page";
}
<h3 class="p-2 bg-primary text-white text-center">Questions</h3>

@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col text-center p-2">No Data</div>
    </div>
}
else
{
    @foreach (Question question in Model)
    {
<div class="row p-2">
    <div class="col-md-6">
        <ul>
            <li>@question.QuestionText
                <ul>
                    <li>@question.CorrectAnswer</li>
                    <li>@question.WrongAnswer1</li>
                    <li>@question.WrongAnswer2</li>
                    <li>@question.WrongAnswer3</li>
                    <li>@question.WrongAnswer4</li>
                </ul>
            </li>
        </ul>
    </div>
    
</div>
    }
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddQuestion" method="post">
            <div class="form-group">
                <label class="control-label">Question</label>
                <input name="QuestionText" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Correct Answer</label>
                <input name="CorrectAnswer" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Wrong Answer 1</label>
                <input name="WrongAnswer1" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Wrong Answer 2</label>
                <input name="WrongAnswer2" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Wrong Answer 3</label>
                <input name="WrongAnswer3" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Wrong Answer 4</label>
                <input name="WrongAnswer4" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
